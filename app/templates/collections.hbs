<div class="jumbo">
  <div class="right"></div>
  <h2>Welcome!</h2>
  <p>We hope you find the message that convey exactly what you're looking to say. </p>
  {{#link-to "about" class="button"}}
    About Us
  {{/link-to}}
{{#each model as |collection|}}
	<article class="posting">
		<h3>{{collection.title}}</h3>
		<div class = "detail user">
			<span>Created by:</span> {{collection.owner}} 
			<br /> {{collection.city}}
		</div>
		<div class = "detail subject">
			<span>Category:</span> {{collection.category}}
		</div>
		<div class = "detail quantity">
			{{collection.quantity}}<span> quotes</span> 
		</div>
	</article>
{{/each}}
</div>
