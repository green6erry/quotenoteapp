<div class="jumbo">
  <div class="right"></div>
  <h2>Welcome!</h2>
  <p>We hope you find the message that convey exactly what you're looking to say. </p>
  {{#link-to "about" class="button"}}
    About Us
  {{/link-to}}
</div>
{{#list-filter
	filter=(action 'filterByCategory')
	as |filteredResults|}}
	<ul class="results">
		{{#each filteredResults as |collectionItem|}}
			<li>{{collection-posting collection=collectionItem}}</li>
		{{/each}}
	</ul>
{{/list-filter}}


